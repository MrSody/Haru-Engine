<!DOCTYPE html>
<html lang="es">
    <head>
        <title><%= __('NameGame') %> - <%= __('LogIn') %></title>

        <%- include('partials/head.ejs'); -%>
    </head>
<body>
    <%- include('partials/navigation'); -%>
    
    
    <div class="container">

        <div class="bg-light card mt-5 p-5 rounded-5 w-50">
            <h1><%= __('LogIn') %></h1>

            <% if (codeError != null) { %>
                <div class="alert alert-danger" role="alert">
                    <%= __(codeError) %>
                </div>
            <% } %>

            <form action="/login" method="post">
                <div class="mb-3">
                    <label class="form-label" for="email">
                        <%= __('Email') %> <span class="req">*</span>
                    </label>
                    <input id="email" class="form-control" name="email" type="text" required>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="password">
                        <%= __('Password') %> <span class="req">*</span>
                    </label>
                    <input id="password" class="form-control" name="password" type="password" required>
                </div>
                <input type="submit" class="button button-block" value="<%= __('LogIn') %>">
            </form>

            <hr>

            <span class="text-center"><%= __('NeedAccount') %> <a class="text-decoration-none" href="/register"><%= __('CreateAccount') %></a></span>
        </div>
    </div>

</body>
</html>
