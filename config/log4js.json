{
    "appenders": {
        "out": { "type": "stdout" },
        "fileApp": {
            "type": "file",
            "filename": "logs/app.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "fileDataBase": {
            "type": "file",
            "filename": "logs/database.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        },
        "filePlayer": {
            "type": "file",
            "filename": "logs/players.log",
            "maxLogSize": 10485760,
            "backups": 3,
            "compress": true
        }
    },
    "categories": {
        "default": { "appenders": ["fileApp"], "level": "all" },
        "app": { "appenders": ["fileApp"], "level": "all" },
        "database": { "appenders": ["fileDataBase"], "level": "all" },
        "players": { "appenders": ["out", "filePlayer"], "level": "all" }
    }
}